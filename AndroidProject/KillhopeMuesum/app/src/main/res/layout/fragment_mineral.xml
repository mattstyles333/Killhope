<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/bg_minerals_trim"
    android:id="@+id/mineral_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/mineral_paneleft">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.abhi.gif.lib.AnimatedGifImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mineral_image"
                android:src="@drawable/ic_launcher"
                android:visibility="invisible"/>
            <it.sephiroth.android.library.imagezoom.ImageViewTouch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mineral_image_basic"
                android:src="@drawable/mineral_baryte_image_1"
                android:visibility="visible"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_chev_right"
                android:id="@+id/imgbutton_nextimage"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_chev_left"
                android:id="@+id/imgbutton_previmage"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mineral_name"
            android:background="@drawable/blue_button"
            style="@style/button_text"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mineral_paneright">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/mineral_list"
            />

    </ScrollView>

</LinearLayout>