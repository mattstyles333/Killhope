<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/pressed_blue" />
            <stroke
                android:width="5dp"
                android:color="@color/white" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/opaque_background"/>
            <stroke
                android:width="5dp"
                android:color="@color/white" />
            <corners
                android:radius="6dp" />
        </shape>
    </item>

</selector>